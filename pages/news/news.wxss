.nav{ 
   margin-top: 20rpx;
   border-top: 2rpx solid #cccccc;
   border-left: 2rpx solid #cccccc;
   overflow: hidden;
}
.nav-item{
    width: 25%;
    float: left;
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    border-right: 2rpx solid #cccccc;
    border-bottom: 2rpx solid #cccccc;
    font-size: 28rpx;
}
.current{
    color: #ffffff;
    background-color: #28a745;
}
.news-list{
    margin: 60rpx 30rpx 0;
    border-bottom: 2rpx solid #cccccc;
}

.news-item{
    height: 240rpx;
    padding: 20rpx 0;
    border-top: 2rpx solid #cccccc;
    clear: both;
}
.news-item image{
    display: block;
    width: 240rpx;
    height: 240rpx;
    float: left;
    margin-right: 30rpx;
}
.news-intro{
  width: 60%;
  padding-top: 30rpx;
  float: left;
  font-size: 28rpx;
}
.news-tit{
  height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.news-info{
    height: 120rpx;
    line-height: 60rpx;
    overflow: hidden;
}
.add-more{
  height: 60rpx;
  width: 50%;
  margin: 40rpx auto;
  text-align: center;
  line-height: 60rpx;
  background-color: #28a745;
  color: #ffffff;
  font-size: 26rpx;
}
.go-top{
  width: 80rpx;
  height: 80rpx;
  background: #28a745 url('http://static.gcimg.net/i/201605/XLgmBLkrP2.png') no-repeat center center;
  display: none;
  background-size: 100% 100%;
  position: fixed;
  bottom: 40rpx;
  right: 30rpx;
  border-radius: 50%;
}